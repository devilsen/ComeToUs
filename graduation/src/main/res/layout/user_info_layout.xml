<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/user_info_background"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_info_head_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:src="@drawable/sea" />

        <TextView
            android:id="@+id/user_info_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:text="董森"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/activity_times_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_info_layout"
        android:background="@drawable/little_card"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/initiate_times_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起活动"
                android:textColor="@color/text_gray"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/text_gray_white"
                android:textSize="18sp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            android:layout_marginTop="24dp"
            android:id="@+id/initiate_times_devision"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/division"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/initiate_times_layout"/>

        <RelativeLayout
            android:id="@+id/into_activity_times_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initiate_times_devision"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与活动"
                android:textColor="@color/text_gray"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@color/text_gray_white"
                android:textSize="18sp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_below="@+id/activity_times_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_main_background"/>


</RelativeLayout>