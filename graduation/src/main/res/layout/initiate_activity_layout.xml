<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:hint=" 活动主题" />

        <LinearLayout
            android:id="@+id/pick_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="   活动类型"
                android:textColor="@color/text_gray_white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/type_1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/type_background"
                android:gravity="center_vertical|center_horizontal"
                android:text="+"
                />

            <TextView
                android:id="@+id/type_2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/type_background"
                android:gravity="center_vertical|center_horizontal"
                android:text="+"
                android:layout_marginLeft="10dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/type_3_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/type_background"
                android:gravity="center_vertical|center_horizontal"
                android:text="+"
                android:layout_marginLeft="10dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/type_4_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/type_background"
                android:gravity="center_vertical|center_horizontal"
                android:text="+"
                android:layout_marginLeft="10dp"
                android:visibility="invisible" />


        </LinearLayout>

        <EditText
            android:id="@+id/activity_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/initiate_padding_top"
            android:gravity="top|left"
            android:hint=" 活动介绍"
            android:minLines="5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/division" />

        <LinearLayout
            android:id="@+id/activity_location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/initiate_padding_top"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/initiate_padding_top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/presence_online" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="地点"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="湖南科技大学逸夫楼"
                android:textColor="@color/text_gray_white"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/division" />

        <LinearLayout
            android:id="@+id/initiate_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/initiate_padding_top"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/initiate_padding_top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/presence_online" />

            <TextView
                android:id="@+id/activity_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="开始时间"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/start_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/initiate_end_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/initiate_padding_top"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/initiate_padding_top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/presence_online" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="结束时间"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/end_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_white"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/division" />


        <ImageView
            android:id="@+id/activity_picture_choose"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/initiate_padding_top"
            android:src="@drawable/sea" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/division" />


    </LinearLayout>
</LinearLayout>