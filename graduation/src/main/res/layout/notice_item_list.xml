<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="horizontal">

    <!--    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_info_head_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/sea" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/notice_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="参加通知"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/notice_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_can_click"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notice_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参加了你发起的"
                android:textColor="@color/text_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notice_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_can_click"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>